
@{
    ViewBag.Title = "FCentri";
    var centri = ViewBag.centri;
}

<head>
    <style>

        #div1 {
            background-color: darkgray;
            height: 58px;
            width: 100%;
        }

        #but {
            width: 100%;
            font-size: 20px;
            text-align: center;
            color: white;
            padding: 9px 9px 9px 9px;
            border: 1px solid white;
            background-color: cornflowerblue;
            cursor: pointer;
        }

        #buth {
            width: 100px;
            font-size: 20px;
            text-align: center;
            color: white;
            margin-top: 7px;
            margin-left: 5px;
            padding: 9px 9px 9px 9px;
            border: 1px solid white;
            background-color: cornflowerblue;
            cursor: pointer;
        }

        table {
            border: solid 1px white;
            border-collapse: collapse;
            font-size: 16px;
            font-family: sans-serif;
            width: 100%
        }

        thead th {
            background-color: #009879;
            border: solid 1px white;
            color: white;
            padding: 10px;
            text-align: left;
        }

        tbody td {
            border: solid 1px white;
            color: black;
            padding: 10px;
        }

        form {
        }

        input[type=text], input[type=password], input[type=date], select, input[type=number], input[type=datetime-local] {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: none;
            background: #f1f1f1;
        }

            input[type=text]:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }
    </style>


</head>

<div id="div1">

    <form action="~/Home/Index"><input id="buth" type="submit" value="HOME" /></form>

</div>

<h2 style="text-align:center">Upravljajte vasim centrima</h2>
<div class="container">
    <table id="tab">
        <thead><tr><th>Naziv</th><th>Adresa</th><th>GodinaOtvaranja</th><th>CenaMesecno</th><th>Upravljaj</th></tr></thead>
        <tbody>
            @foreach (var b in centri)
            {
                <tr>
                    <td>@b.Naziv</td>
                    <td>@b.Adresa.Ulica  @b.Adresa.Mesto</td>
                    <td>@b.GodinaOtvaranja</td>
                    <td>@b.CenaMesecno</td>
                    <td>
                        <form action="~/Vlasnik/Izmeni">
                            <input type="hidden" name="id" value="@b.Id" />
                            <input type="submit" id="but" value="Izmeni" />
                        </form>
                            <form action="~/Vlasnik/Brisanje">
                                <input type="hidden" name="id" value="@b.Id" />
                                <input type="submit" id="but" value="Obrisi" />
                            </form>

                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<br />
<br />
<hr>
<br />
<br />

<h2 style="text-align:center;font-family:sans-serif">Dodajte novi centar</h2>

<div style="border: 1px solid #009879; padding:9px 9px 9px 9px">
    <form action="~/Vlasnik/NoviCentar">

        <label for="naziv">Naziv:</label>
        <input type="text" name="naziv" id="naziv" placeholder="Naziv fitnes centra" required />

        <label for="ulica">Ulica:</label>
        <input type="text" name="ulica" id="ulica" placeholder="Ulica" required />

        <label for="mesto">Mesto:</label>
        <input type="text" name="mesto" id="mesto" placeholder="Mesto" required />

        <label for="postanskibroj">Postanski broj:</label>
        <input type="text" min="1" name="postanskibroj" id="postanskibroj" placeholder="Postanski broj" required />

        <label for="godinaotvaranja">Godina otvaranja:</label>
        <input type="number" min="1900" name="godinaotvaranja" id="godinaotvaranja" placeholder="Godina otvaranja" required />

        <input type="hidden" name="posednik" id="posednik" value="@ViewBag.vlasnik.Username" required />

        <label for="mesecno">Cena mesecno:</label>
        <input type="number" name="mesecno" id="mesecno" min="1" placeholder="Cena mesecno" required />

        <label for="godisnje">Cena godisnje:</label>
        <input type="number" min="1" name="godisnje" id="godisnje" placeholder="Cena godisnje" required />

        <label for="samostalno">Cena samostalno:</label>
        <input type="number" min="1" name="samostalno" id="samostalno" placeholder="Cena samostalno" required />

        <label for="grupno">Cena grupno:</label>
        <input type="number" min="1" name="grupno" id="grupno" placeholder="Cena grupno" required />

        <label for="strenerom">Cena sa trenerom:</label>
        <input type="number" min="1" name="strenerom" id="strenerom" placeholder="Cena samostalno" required />

        <input type="hidden" name="isdeleted" value="false" />

        <input type="submit" id="but" value="Dodaj novi centar" />

    </form>


</div>