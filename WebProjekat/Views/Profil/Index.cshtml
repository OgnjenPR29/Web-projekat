
@{
    ViewBag.Title = "Index";
}

<head>
    <style>

        label {
        font-family:sans-serif;
        font-size:18px;
        }

        .btn {
            color: white;
            padding: 16px 20px;
            margin: 8px 0;
            border: none;
            cursor: pointer;
            width: 100%;
            opacity: 0.9;
            font-size : 20px;
        }

            .btn:hover {
                opacity: 1;
            }

        input[type=text], input[type=email], input[type=password], input[type=date], select {
            width: 100%;
            padding: 15px;
            margin: 5px 0 22px 0;
            display: inline-block;
            border: 1px solid #009879;
            background: #f1f1f1;
            font-size: 20px;
        }

            input[type=text]:focus, input[type=password]:focus {
                background-color: #ddd;
                outline: none;
            }

        form {
            display: inline;
        }



        #header {
            width: 100%;
            height: 58px;
            background-color: darkgray;
        }

        h1 {
            text-align: center;
        }

        #div1 {
            margin: 0 auto;
            width: 100%;
            background-color: white;
        }

        #but {
            margin-left: 9px;
            margin-top: 6px;
            width: 130px;
            font-size: 16px;
            text-align: center;
            color: white;
            padding: 12px 12px 12px 9px;
            border: 1px solid white;
            background-color: cornflowerblue;
            cursor: pointer;
            left: 1200px;
        }
    </style>

</head>

<div id="header">
    <form action="~/Home/Index"><input id="but" type="submit" value="HOME" /></form>
    <form action="~/Home/Profil"><input id="but" type="submit" value="MyProfile" /></form>
</div>
<hr>

<h1>Izmenite svoje podatke</h1>
<hr>

<form action="~/Profil/Izmenjen" id="forma" onsubmit="return validate(event)" method="post">
    <div id="div1">

        <input type="hidden" placeholder="Unesite Username" name="username" id="username" value="@ViewBag.korisnik.Username" required>

        <label for="ime"><b>Ime</b></label>
        <input type="text" placeholder="Unesite Ime" name="ime" id="ime" value="@ViewBag.korisnik.Ime" required>

        <label for="prezime"><b>Prezime</b></label>
        <input type="text" placeholder="Unesite Prezime" name="prezime" id="prezime" value="@ViewBag.korisnik.Prezime" required>

        <label for="lozinka"><b>Sifra</b></label>
        <input type="password" placeholder="Unesite Sifru" name="lozinka" id="lozinka" value="@ViewBag.korisnik.Lozinka" required>

        <label for="email"><b>Email</b></label>
        <input type="email" placeholder="Unesite Email" name="email" id="email" value="@ViewBag.korisnik.Email" required>

        <label for="datumrodjenja"><b>Datum rodjenja</b></label>
        <input type="date" pattern="\d{2}-\d{2}-{4}" name="datumrodjenja" id="datumrodjenja" value="@ViewBag.godina-@ViewBag.mesec-@ViewBag.dan" required>

        <input type="hidden" name="Uloga" value="@ViewBag.korisnik.Uloga" />

        <label for="pol"><b>Pol</b></label>
        <select id="pol" name="pol" value="@ViewBag.korisnik.Pol">
            <option value="Muski">Muski</option>
            <option value="Zenski">Zenski</option>
        </select>

        <input class="btn" style="background-color:cornflowerblue" type="submit" value="Izmeni podatke" />


    </div>

    <hr>
    </form>
